# Environment
DEBUG=true
ENV=development

# MongoDB
MONGODB_URL=mongodb+srv://user:password@cluster.mongodb.net/
MONGODB_DB_NAME=healthbridge

# ChromaDB Configuration
CHROMA_MODE=persistent                    # "persistent" (dev) or "http" (prod)
CHROMA_DB_PATH=./data/chroma              # For persistent mode only
CHROMA_PERSIST_DIR=./data/chroma          # For RAG retriever in persistent mode
CHROMA_HOST=localhost                     # For HTTP mode
CHROMA_PORT=8000                          # For HTTP mode
CHROMA_AUTH_TOKEN=                        # Optional auth token for HTTP mode

# LLM Provider (github, gemini, openai, azure)
LLM_PROVIDER=github
LLM_MODEL=openai/gpt-4o-mini
LLM_TEMPERATURE=1.0

# GitHub Models (default provider)
GITHUB_TOKEN=your_github_token_here
GITHUB_BASE_URL=https://models.github.ai/inference

# Google / Gemini
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Azure OpenAI
AZURE_OPENAI_API_KEY=your_azure_key_here

# Firebase
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json

# Redis (for Celery background tasks)
REDIS_URL=redis://localhost:6379/0

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
